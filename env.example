# ==========================================
# OURA SLEEP TRACKER CONFIGURATION
# ==========================================
# ALL VARIABLES ARE REQUIRED - NO DEFAULTS PROVIDED

# Oura API OAuth2 Configuration
# Register your app at https://cloud.ouraring.com/oauth/applications
OURA_CLIENT_ID=your_client_id_here
OURA_CLIENT_SECRET=your_client_secret_here

# Clockify API Configuration  
# Get your API token from: https://app.clockify.me/user/settings
CLOCKIFY_API_TOKEN=your_clockify_token_here

# Oura OAuth Tokens (Optional - for deployment)
# These are generated after running "npm start" locally
# Copy from tokens.json after authentication
OURA_ACCESS_TOKEN=
OURA_REFRESH_TOKEN=
OURA_TOKEN_EXPIRES_AT=

# Application Configuration
NODE_ENV=development
SYNC_DAYS=1
SERVER_PORT=3000

# API Endpoints
OURA_API_BASE=https://api.ouraring.com
OURA_AUTH_BASE=https://cloud.ouraring.com
CLOCKIFY_API_BASE=https://api.clockify.me/api

# OAuth Configuration
REDIRECT_URI=http://localhost:3000/callback
OAUTH_SCOPES=daily

# Performance Configuration  
CLOCKIFY_API_DELAY=50
SYNC_TIMEOUT=300000

# File Configuration
TOKEN_FILE=oura-tokens.json
LOG_DIR=logs
SLEEP_PROJECT_NAME=Sleep

# Logging Configuration
LOG_LEVEL=INFO 