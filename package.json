{
  "name": "sleep-tracker",
  "version": "1.0.0",
  "description": "Oura to Clockify Sleep Sync - Automatically sync your Oura sleep data to Clockify as time entries",
  "main": "index.js",
  "scripts": {
    "start": "tsx src/scripts/index.ts",
    "dev": "tsx watch src/scripts/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "oura",
    "sleep",
    "tracker",
    "clockify",
    "sync",
    "time-tracking",
    "oauth2",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^22.10.7",
    "cli-progress": "^3.12.0",
    "dotenv": "^16.4.7",
    "tsx": "^4.20.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/cli-progress": "^3.11.6",
    "typescript": "^5.7.3"
  }
}
