{
  "name": "oura-clockify-sync",
  "version": "1.0.0",
  "description": "Oura to Clockify Sleep Sync - Automatically sync your Oura sleep data to Clockify as time entries",
  "main": "index.js",
  "scripts": {
    "start": "tsx src/scripts/index.ts",
    "server": "tsx src/server.ts",
    "scheduler": "tsx src/scripts/scheduler.ts",
    "dev": "tsx watch src/scripts/index.ts",
    "dev:server": "tsx watch src/server.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "oura",
    "sleep",
    "tracker",
    "clockify",
    "sync",
    "time-tracking",
    "oauth2",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@types/node": "^22.10.7",
    "cli-progress": "^3.12.0",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.31.6",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.4",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "tsx": "^4.20.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/cli-progress": "^3.11.6",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.6",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@9.4.0+sha1.9217c800d4ab947a7aee520242a7b70d64fc7638"
}
